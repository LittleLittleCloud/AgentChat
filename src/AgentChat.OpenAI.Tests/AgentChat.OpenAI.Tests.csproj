		<PackageReference Include="xunit.runner.visualstudio" Version="$(XUnitVersion)" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\AgentChat.Core.Tests\AgentChat.Core.Tests.csproj" />
